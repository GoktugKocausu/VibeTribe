# Build Stage
FROM maven:3.9.6-eclipse-temurin-17 AS builder
WORKDIR /app
    
COPY pom.xml .
COPY src ./src
    
RUN mvn clean package -DskipTests

# Runtime Stage
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app

COPY --from=builder /app/target/*.jar vibetribe.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "vibetribe.jar"]
    